{% endschema %}

<div class="maison_commerce_maison_banner-wrapper">
  <div
    class="maison_commerce_maison_banner"
  >
    <div class="maison_commerce_maison_banner__container">
      <div class="maison_commerce_maison_banner__content">
        <div class="maison_commerce_maison_banner__text-content">
          {% if section.settings.rating_text != blank %}
            <div class="maison_commerce_maison_banner__rating">
              <div class="maison_commerce_maison_banner__stars">
                {% for i in (1..5) %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_banner__star" width="11" height="10" viewBox="0 0 11 10" fill="none">
                    <path d="M5.49993 8.26229L2.57453 9.94891C2.48856 9.98944 2.40878 10.0059 2.33517 9.99816C2.26211 9.98995 2.19092 9.96584 2.12161 9.92583C2.05177 9.88479 1.99912 9.82683 1.96366 9.75194C1.9282 9.67704 1.92497 9.59523 1.95399 9.50648L2.73248 6.34407L0.157641 4.21271C0.0851104 4.15628 0.0372938 4.08883 0.0141914 4.01034C-0.00891093 3.93186 -0.00380688 3.85671 0.0295035 3.7849C0.0628139 3.71308 0.107138 3.65409 0.162476 3.60792C0.218352 3.5633 0.293569 3.53303 0.388128 3.51713L3.78579 3.23397L5.11068 0.239297C5.14722 0.154659 5.19987 0.0936157 5.26864 0.0561694C5.33741 0.0187231 5.41451 0 5.49993 0C5.58536 0 5.66272 0.0187231 5.73203 0.0561694C5.80134 0.0936157 5.85372 0.154659 5.88918 0.239297L7.21407 3.23397L10.6109 3.51713C10.706 3.53252 10.7815 3.56304 10.8374 3.60869C10.8933 3.65383 10.9379 3.71257 10.9712 3.7849C11.0039 3.85671 11.0088 3.93186 10.9857 4.01034C10.9626 4.08883 10.9148 4.15628 10.8422 4.21271L8.26738 6.34407L9.04588 9.50648C9.07596 9.5942 9.07301 9.67576 9.03701 9.75117C9.00102 9.82657 8.9481 9.88454 8.87825 9.92506C8.80948 9.9661 8.73829 9.99046 8.66469 9.99816C8.59162 10.0059 8.51211 9.98944 8.42614 9.94891L5.49993 8.26229Z" fill="currentColor"/>
                  </svg>
                {% endfor %}
              </div>
              <div class="maison_commerce_maison_banner__rating-text">
                {{ section.settings.rating_text }}
              </div>
            </div>
          {% endif %}

          {% if section.settings.section_heading != blank %}
            <h2 class="maison_commerce_maison_banner__heading">
              {{ section.settings.section_heading }}
            </h2>
          {% endif %}

          {% if section.settings.section_description != blank %}
            <div class="maison_commerce_maison_banner__description">
              {{ section.settings.section_description }}
            </div>
          {% endif %}
        </div>

        <div class="maison_commerce_maison_banner__actions">
          <div class="maison_commerce_maison_banner__actions-buttons">
            {% if section.settings.primary_button_text != blank and section.settings.primary_button_link != blank %}
                <a
                href="{{ section.settings.primary_button_link }}"
                class="maison_commerce_maison_banner__button maison_commerce_maison_banner__button--primary"
                >
                <span>{{ section.settings.primary_button_text }}</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_banner__button-arrow" width="23" height="17" viewBox="0 0 23 17" fill="none">
                    <path d="M0 8.03027H21.0938" stroke="currentColor" stroke-width="1.5"/>
                    <path d="M13.5938 15.5303L21.0938 8.03027L13.5938 0.530273" stroke="currentColor" stroke-width="1.5"/>
                </svg>
                </a>
            {% endif %}

            {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
                <a
                href="{{ section.settings.secondary_button_link }}"
                class="maison_commerce_maison_banner__button maison_commerce_maison_banner__button--secondary"
                >
                <span>{{ section.settings.secondary_button_text }}</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="maison_commerce_maison_banner__button-arrow" width="23" height="17" viewBox="0 0 23 17" fill="none">
                    <path d="M0 8.03027H21.0938" stroke="currentColor" stroke-width="1.5"/>
                    <path d="M13.5938 15.5303L21.0938 8.03027L13.5938 0.530273" stroke="currentColor" stroke-width="1.5"/>
                </svg>
                </a>
            {% endif %}
          </div>

          {% if section.blocks.size > 0 %}
            <div class="maison_commerce_maison_banner__features">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'feature' %}
                    <div class="maison_commerce_maison_banner__feature" {{ block.shopify_attributes }}>
                      {% if block.settings.feature_icon != blank %}
                        <div class="maison_commerce_maison_banner__feature-icon">
                          {{
                            block.settings.feature_icon
                            | image_url: width: 32
                            | image_tag: loading: 'lazy', alt: block.settings.feature_icon.alt, width: 16, height: 16
                          }}
                        </div>
                      {% endif %}
                      {% if block.settings.feature_text != blank %}
                        <p class="maison_commerce_maison_banner__feature-text">
                          {{ block.settings.feature_text }}
                        </p>
                      {% endif %}
                      {% unless forloop.last %}
                        <div class="maison_commerce_maison_banner__feature-divider"></div>
                      {% endunless %}
                    </div>
                {% endcase %}
                {% unless forloop.last %}
                    <div class="maison_commerce_maison_banner__features-divider"></div>
                {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% if section.settings.background_image != blank or section.settings.background_video != blank %}
    <div class="maison_commerce_maison_banner__background">
      {% if section.settings.background_video != blank %}
        <video class="maison_commerce_maison_banner__video" autoplay muted loop playsinline>
          {% for source in section.settings.background_video.sources %}
            <source src="{{ source.url }}" type="{{ source.mime_type }}">
          {% endfor %}
        </video>
      {% elsif section.settings.background_image != blank %}
        {{
          section.settings.background_image
          | image_url: width: 2000
          | image_tag:
            loading: 'lazy',
            class: 'maison_commerce_maison_banner__image',
            alt: section.settings.background_image.alt
        }}
      {% endif %}
    </div>
  {% endif %}
</div>

<style>
  #shopify-section-{{ section.id }}{
    background-color: {{ section.settings.section_bg_color }};
  }
  .maison_commerce_maison_banner-wrapper{
    display: flex;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
  }
  @media (max-width: 990px) {
    .maison_commerce_maison_banner-wrapper{
      flex-direction: column;
    }
  }
  /* Section Container */
  .maison_commerce_maison_banner {
    position: relative;
    width: 100%;
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
    min-height: 500px;
    min-width: 584px;
    overflow: hidden;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
      min-height: auto;
      min-width: auto;
    }
  }

  /* Container */
  .maison_commerce_maison_banner__container {
    position: relative;
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
    height: 100%;
  }

  /* Background Image/Video */
  .maison_commerce_maison_banner__background {
    overflow: hidden;
    pointer-events: none;
    width: 100%;
    max-width: 621px;
    display: flex;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__background {
      max-width: 100%;
    }
  }

  .maison_commerce_maison_banner__video,
  .maison_commerce_maison_banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content */
  .maison_commerce_maison_banner__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 40px;
    max-width: 819px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__content {
      gap: 24px;
      max-width: 100%;
      align-items: center;
    }
  }

  /* Text Content */
  .maison_commerce_maison_banner__text-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__text-content {
      gap: 8px;
      align-items: center;
      text-align: center;
    }
  }

  /* Rating */
  .maison_commerce_maison_banner__rating {
    display: flex;
    gap: 8px;
    align-items: center;
    justify-content: flex-start;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__rating {
      justify-content: center;
    }
  }

  .maison_commerce_maison_banner__stars {
    display: flex;
    gap: 3px;
    align-items: center;
  }

  .maison_commerce_maison_banner__star {
    width: 11px;
    height: 10px;
    color: #1a1a1a;
    flex-shrink: 0;
  }

  .maison_commerce_maison_banner__rating-text {
    font-size: 12px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.rating_color }};
    margin: 0;
  }

  .maison_commerce_maison_banner__rating-text p{
    margin: 0;
  }

  .maison_commerce_maison_banner__rating-text a{
    color: inherit;
  }

  .maison_commerce_maison_banner__rating-text strong {
    font-weight: 700;
  }

  .maison_commerce_maison_banner__rating-text u {
    text-decoration: underline;
    text-underline-position: from-font;
  }

  /* Heading */
  .maison_commerce_maison_banner__heading {
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: uppercase;
    text-align: left;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
      text-align: center;
    }
  }

  /* Description */
  .maison_commerce_maison_banner__description {
    font-size: {{ section.settings.description_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
    letter-spacing: 0.4px;
    text-align: left;
  }

  .maison_commerce_maison_banner__description p {
    margin: 0;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
      letter-spacing: 0.28px;
      text-align: center;
      max-width: 245px;
    }
  }

  /* Actions */
  .maison_commerce_maison_banner__actions {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__actions {
      gap: 12px;
      width: 100%;
    }
  }

  /* Buttons */
  .maison_commerce_maison_banner__actions-buttons{
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }
  @media (max-width: 990px) {
    .maison_commerce_maison_banner__actions-buttons{
      gap: 12px;
    }
  }
  .maison_commerce_maison_banner__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px;
    font-size: 14px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease;
    text-align: center;
    min-width: 250px;
  }

  .maison_commerce_maison_banner__button--primary {
    background-color: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text_color }};
    height: 56px;
    transition: all 0.3s ease;
  }

  .maison_commerce_maison_banner__button--primary:hover{
    background-color: {{ section.settings.primary_button_bg | hex_to_rgba: 0.75 }};
  }

  .maison_commerce_maison_banner__button--secondary {
    background-color: transparent;
    color: {{ section.settings.secondary_button_text_color }};
    border: 1px solid {{ section.settings.secondary_button_border }};
    height: 56px;
    transition: all 0.3s ease;
  }

  .maison_commerce_maison_banner__button--primary:hover{
    background-color: rgba(255,255,255,0.2);
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__button {
      width: 100%;
      padding: 12px 24px;
      height: 44px;
      gap: 8px;
    }

    .maison_commerce_maison_banner__button--primary {
      background-color: {{ section.settings.secondary_button_border }};
      color: #fdfcfc;
    }
  }

  .maison_commerce_maison_banner__button-arrow {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__button-arrow {
      width: 20px;
      height: 20px;
    }
  }

  /* Desktop Button Layout */
  @media (min-width: 769px) {
    .maison_commerce_maison_banner__button {
      flex: 1;
    }

    .maison_commerce_maison_banner__button--secondary {
      padding: 16px 24px;
    }
  }

  /* Features */
  .maison_commerce_maison_banner__features {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 8px 16px;
    flex-wrap: wrap;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__features {
      justify-content: space-between;
      gap: 12px;
      padding: 8px 16px;
    }

    .maison_commerce_maison_banner__features .maison_commerce_maison_banner__features-divider:nth-last-child(-n + 2){
      display: none!important;
    }

    .maison_commerce_maison_banner__features .maison_commerce_maison_banner__feature:last-child{
      display: none;
    }
  }

  .maison_commerce_maison_banner__features-divider{
    display: flex!important;
    width: 1px;
    height: 10px;
    background: rgba(0, 0, 0, 0.08);
  }

  .maison_commerce_maison_banner__feature {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    height: 18px;
  }

  .maison_commerce_maison_banner__feature-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .maison_commerce_maison_banner__feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .maison_commerce_maison_banner__feature-text {
    font-size: 12px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.feature_text_color }};
    margin: 0;
    white-space: nowrap;
  }

  .maison_commerce_maison_banner__feature-divider {
    width: 10px;
    height: 1px;
    background-color: {{ section.settings.feature_text_color }};
    opacity: 0.3;
    margin: 0 8px;
    transform: rotate(90deg);
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_banner__feature-divider {
      display: none;
    }
  }
</style>
