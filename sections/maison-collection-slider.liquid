{% schema %}
{
  "name": "Maison Collection Slider",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Our Bestsellers"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All Holiday Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 20,
      "step": 1,
      "label": "Products to Show",
      "default": 4
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "heading_font_size_desktop",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size (Mobile)",
      "default": 24
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "select",
      "id": "image_shape",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "arch",
          "label": "Arch"
        },
        {
          "value": "blob",
          "label": "Blob"
        },
        {
          "value": "chevronleft",
          "label": "Chevron left"
        },
        {
          "value": "chevronright",
          "label": "Chevron right"
        },
        {
          "value": "diamond",
          "label": "Diamond"
        },
        {
          "value": "parallelogram",
          "label": "Parallelogram"
        },
        {
          "value": "round",
          "label": "Round"
        }
      ],
      "default": "default",
      "label": "Image shape"
    },
    {
      "type": "checkbox",
      "id": "image_no_crop",
      "default": false,
      "label": "Show images without crop"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show second image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_tags",
      "label": "Show scroll tags",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_product_description",
      "label": "Show product description",
      "default": false
    },
    {
      "type": "range",
      "id": "description_font_size",
      "min": 10,
      "max": 40,
      "step": 1,
      "default": 14,
      "label": "Description font size"
    },
    {
      "type": "range",
      "id": "description_word_limit",
      "min": 2,
      "max": 100,
      "step": 1,
      "default": 20,
      "label": "Description word limit"
    },
    {
      "type": "select",
      "id": "quick_add",
      "default": "none",
      "label": "Quick add",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "bulk",
          "label": "Bulk"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Maison Collection Slider"
    }
  ]
}
{% endschema %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

{% assign collection = section.settings.collection %}
{% assign products_to_show = section.settings.products_to_show | default: 4 %}

<div class="maison_commerce_maison_collection_slider">
  <div class="maison_commerce_maison_collection_slider__container">
    {% if section.settings.section_heading != blank %}
      <div class="maison_commerce_maison_collection_slider__header">
        <!-- Desktop Navigation -->
        <div class="maison_commerce_maison_collection_slider__nav-button maison_commerce_maison_collection_slider__nav-button--prev maison_commerce_maison_collection_slider__nav-button--desktop">
          <svg class="maison_commerce_maison_collection_slider__nav-icon--desktop" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>

        <div class="maison_commerce_maison_collection_slider__heading-wrapper">
          <h2 class="maison_commerce_maison_collection_slider__heading">
            {{ section.settings.section_heading }}
          </h2>
        </div>

        <div class="maison_commerce_maison_collection_slider__nav-button maison_commerce_maison_collection_slider__nav-button--next maison_commerce_maison_collection_slider__nav-button--desktop">
          <svg class="maison_commerce_maison_collection_slider__nav-icon--desktop" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    {% endif %}

    {% if collection != blank and collection.products_count > 0 %}
      {% assign collection_products = collection.products | limit: products_to_show %}

      <!-- Swiper Slider (Desktop & Mobile) -->
      <div class="swiper maison_commerce_maison_collection_slider__swiper">
        <div class="swiper-wrapper">
          {% for product in collection_products %}
            {% assign lazy_load = false %}
            {% if forloop.index > 2 %}
              {% assign lazy_load = true %}
            {% endif %}

            {% assign skip_card_product_styles = false %}
            {% if forloop.first %}
              {% assign skip_card_product_styles = true %}
            {% endif %}

            <div class="swiper-slide maison_commerce_maison_collection_slider__slide">
              <div class="maison_commerce_maison_collection_slider__product">
                {% render 'card-product', 
                  card_product: product, 
                  media_aspect_ratio: section.settings.image_ratio, 
                  image_shape: section.settings.image_shape, 
                  show_secondary_image: section.settings.show_secondary_image, 
                  show_vendor: section.settings.show_vendor, 
                  show_rating: section.settings.show_rating, 
                  lazy_load: lazy_load, 
                  skip_styles: skip_card_product_styles, 
                  quick_add: section.settings.quick_add, 
                  section_id: section.id, 
                  show_description: section.settings.show_product_description, 
              description_font_size: section.settings.description_font_size, 
              description_word_limit: section.settings.description_word_limit, 
              no_crop_image: section.settings.image_no_crop, 
              show_scroll_tags: section.settings.show_scroll_tags 
                %}
              </div>
            </div>
          {% endfor %}
        </div>

          <!-- Mobile Navigation -->
        <div class="maison_commerce_maison_collection_slider__navigation">
          <div class="maison_commerce_maison_collection_slider__nav-button maison_commerce_maison_collection_slider__nav-button--prev maison_commerce_maison_collection_slider__nav-button--mobile">
            <svg class="maison_commerce_maison_collection_slider__nav-icon--mobile" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="maison_commerce_maison_collection_slider__progress maison_commerce_maison_collection_slider__progress--mobile">
            <div class="maison_commerce_maison_collection_slider__progress-bar"></div>
          </div>
          <div class="maison_commerce_maison_collection_slider__nav-button maison_commerce_maison_collection_slider__nav-button--next maison_commerce_maison_collection_slider__nav-button--mobile">
            <svg class="maison_commerce_maison_collection_slider__nav-icon--mobile" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Desktop Progress Bar -->
      <div class="maison_commerce_maison_collection_slider__progress maison_commerce_maison_collection_slider__progress--desktop">
        <div class="maison_commerce_maison_collection_slider__progress-bar"></div>
      </div>

      <!-- CTA Button -->
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="maison_commerce_maison_collection_slider__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="maison_commerce_maison_collection_slider__button">
            <span>{{ section.settings.button_text }}</span>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M15.3105 12.0003L9.53099 6.21925L8.46899 7.27975L13.1895 12.0003L8.46899 16.7192L9.53099 17.7812L15.3105 12.0003Z" fill="currentColor"/>
            </svg>
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="maison_commerce_maison_collection_slider__empty">
        <p>No products found in this collection.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  /* Section Container */
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
  }

  .maison_commerce_maison_collection_slider {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_collection_slider__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__container {
      gap: 32px;
    }
  }

  /* Header */
  .maison_commerce_maison_collection_slider__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__header {
      max-width: 100%;
      justify-content: center;
    }
  }

  .maison_commerce_maison_collection_slider__heading-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    justify-content: center;
  }

  .maison_commerce_maison_collection_slider__heading {
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: uppercase;
    text-align: center;
    width: 100%;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
    }
  }


  /* Swiper */
  .maison_commerce_maison_collection_slider__swiper {
    position: relative;
    width: 100%;
    overflow: visible;
  }

  .maison_commerce_maison_collection_slider__product {
    width: 100%;
    height: 100%;
  }

  .maison_commerce_maison_collection_slider__slide {
    height: auto;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__slide .maison_commerce_maison_collection_slider__product {
      width: 180px;
      margin: 0 auto;
    }
  }

  /* Navigation Buttons */
  .maison_commerce_maison_collection_slider__nav-button {
    width: 56px;
    height: 56px;
    border: 1px solid #e6e6e6;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: opacity 0.3s ease;
    flex-shrink: 0;
  }

  .maison_commerce_maison_collection_slider__nav-button:hover {
    opacity: 0.7;
  }

  .maison_commerce_maison_collection_slider__nav-button svg {
    color: #1a1a1a;
  }

  /* Desktop Navigation (in header) */
  .maison_commerce_maison_collection_slider__nav-button--desktop {
    display: flex;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__nav-button--desktop {
      display: none;
    }
  }

  .maison_commerce_maison_collection_slider__nav-icon--desktop {
    display: block;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__nav-icon--desktop {
      display: none;
    }
  }

  /* Mobile Navigation (at bottom) */
  .maison_commerce_maison_collection_slider__navigation {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-top: 32px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__navigation {
      display: flex;
    }
  }

  .maison_commerce_maison_collection_slider__nav-button--mobile {
    width: 44px;
    height: 44px;
    display: none;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__nav-button--mobile {
      display: flex;
    }
  }

  .maison_commerce_maison_collection_slider__nav-icon--mobile {
    display: none;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__nav-icon--mobile {
      display: block;
    }
  }

  /* Progress Bar */
  .maison_commerce_maison_collection_slider__progress {
    height: 2px;
    background-color: rgba(26, 26, 26, 0.1);
    border-radius: 999px;
    position: relative;
    overflow: hidden;
  }

  /* Desktop Progress Bar */
  .maison_commerce_maison_collection_slider__progress--desktop {
    display: block;
    width: 100%;
    margin-top: 0;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__progress--desktop {
      display: none;
    }
  }

  /* Mobile Progress Bar */
  .maison_commerce_maison_collection_slider__progress--mobile {
    display: none;
    flex: 1;
    max-width: 200px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__progress--mobile {
      display: block;
    }
  }

  .maison_commerce_maison_collection_slider__progress-bar {
    display: flex!important;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background-color: #1a1a1a;
    border-radius: 999px;
    transition: width 0.3s ease;
    width: 0%;
  }

  /* Button */
  .maison_commerce_maison_collection_slider__button-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .maison_commerce_maison_collection_slider__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background-color: #090909;
    color: #fffefc;
    padding: 16px 32px;
    font-size: 14px;
    font-weight: 700;
    line-height: 1.5;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    height: 56px;
    transition: opacity 0.3s ease;
    max-width: 400px;
    width: 100%;
  }

  .maison_commerce_maison_collection_slider__button:hover {
    opacity: 0.8;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_collection_slider__button {
      height: 44px;
      font-size: 14px;
      padding: 16px 32px;
      max-width: 100%;
    }
  }

  .maison_commerce_maison_collection_slider__button svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Empty State */
  .maison_commerce_maison_collection_slider__empty {
    text-align: center;
    padding: 40px 20px;
    color: #1a1a1a;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperContainer = document.querySelector('.maison_commerce_maison_collection_slider__swiper');
    
    if (swiperContainer) {
      const desktopProgressBar = document.querySelector('.maison_commerce_maison_collection_slider__progress--desktop .maison_commerce_maison_collection_slider__progress-bar');
      const mobileProgressBar = document.querySelector('.maison_commerce_maison_collection_slider__progress--mobile .maison_commerce_maison_collection_slider__progress-bar');
      
      // Get navigation buttons (desktop or mobile depending on screen size)
      const desktopPrev = document.querySelector('.maison_commerce_maison_collection_slider__nav-button--prev.maison_commerce_maison_collection_slider__nav-button--desktop');
      const desktopNext = document.querySelector('.maison_commerce_maison_collection_slider__nav-button--next.maison_commerce_maison_collection_slider__nav-button--desktop');
      const mobilePrev = document.querySelector('.maison_commerce_maison_collection_slider__nav-button--prev.maison_commerce_maison_collection_slider__nav-button--mobile');
      const mobileNext = document.querySelector('.maison_commerce_maison_collection_slider__nav-button--next.maison_commerce_maison_collection_slider__nav-button--mobile');
      
      // Determine which buttons to use based on screen size
      const isMobile = window.innerWidth <= 990;
      const prevButtonToUse = isMobile ? mobilePrev : desktopPrev;
      const nextButtonToUse = isMobile ? mobileNext : desktopNext;
      
      const swiper = new Swiper('.maison_commerce_maison_collection_slider__swiper', {
        slidesPerView: 'auto',
        spaceBetween: 20,
        centeredSlides: false,
        loop: false,
        navigation: {
          nextEl: nextButtonToUse,
          prevEl: prevButtonToUse,
        },
        breakpoints: {
          0: {
            slidesPerView: 1.17,
            spaceBetween: 16,
            centeredSlides: true,
          },
          500: {
            slidesPerView: 2,
            spaceBetween: 16,
            centeredSlides: false,
          },
          991: {
            slidesPerView: 4,
            spaceBetween: 20,
            centeredSlides: false,
          }
        },
        on: {
          init: function() {
            if (desktopProgressBar) {
              desktopProgressBar.style.width = '25%';
            }
            if (mobileProgressBar) {
              mobileProgressBar.style.width = '25%';
            }
          },
          progress: function(swiper, progress) {
            const adjustedProgress = 0.25 + (progress * 0.75);
            if (desktopProgressBar) {
              desktopProgressBar.style.width = (adjustedProgress * 100) + '%';
            }
            if (mobileProgressBar) {
              mobileProgressBar.style.width = (adjustedProgress * 100) + '%';
            }
          },
        },
      });
    }
  });
</script>

