<script>
  // Sale Countdown Timer Function
  function initSaleCountdownTimer() {
    // Get countdown duration from schema settings
    {% for block in section.blocks %}
      {% if block.type == 'right_column' %}
        const countdownDays = {{ block.settings.countdown_days | default: 1 }};
        const countdownHours = {{ block.settings.countdown_hours | default: 0 }};
        const countdownMinutes = {{ block.settings.countdown_minutes | default: 0 }};
        const countdownSeconds = {{ block.settings.countdown_seconds | default: 0 }};
        const showDayAsZero = {{ block.settings.show_day_as_zero | json }};
        
        // Set the countdown end date based on schema settings
        const endDate = new Date();
        endDate.setDate(endDate.getDate() + countdownDays);
        endDate.setHours(endDate.getHours() + countdownHours);
        endDate.setMinutes(endDate.getMinutes() + countdownMinutes);
        endDate.setSeconds(endDate.getSeconds() + countdownSeconds);
      {% endif %}
    {% endfor %}
    
    const timer = setInterval(function() {
      const now = new Date().getTime();
      const distance = endDate.getTime() - now;
      
      if (distance < 0) {
        clearInterval(timer);
        document.getElementById('countdown-days').innerHTML = '00';
        document.getElementById('countdown-hours').innerHTML = '00';
        document.getElementById('countdown-minutes').innerHTML = '00';
        document.getElementById('countdown-seconds').innerHTML = '00';
        return;
      }
      
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      
      // Handle days display based on show_day_as_zero setting
      if (showDayAsZero) {
        document.getElementById('countdown-days').innerHTML = '00';
      } else {
        document.getElementById('countdown-days').innerHTML = days.toString().padStart(2, '0');
      }
      
      document.getElementById('countdown-hours').innerHTML = hours.toString().padStart(2, '0');
      document.getElementById('countdown-minutes').innerHTML = minutes.toString().padStart(2, '0');
      document.getElementById('countdown-seconds').innerHTML = seconds.toString().padStart(2, '0');
    }, 1000);
  }

  function initCountdownTimers() {
    {% for block in section.blocks %}
      {% if block.type == 'countdown_timer' %}
        const countdown{{ block.id }} = document.getElementById('countdown-{{ block.id }}');
        if (countdown{{ block.id }}) {
          // Calculate end date from countdown duration settings
          const countdownDays = {{ block.settings.countdown_days | default: 1 }};
          const countdownHours = {{ block.settings.countdown_hours | default: 0 }};
          const countdownMinutes = {{ block.settings.countdown_minutes | default: 0 }};
          const countdownSeconds = {{ block.settings.countdown_seconds | default: 0 }};
          const showDayAsZero = {{ block.settings.show_day_as_zero | json }};
          const hideDays = {{ block.settings.hide_days | json }};
          
          const endDate = new Date();
          endDate.setDate(endDate.getDate() + countdownDays);
          endDate.setHours(endDate.getHours() + countdownHours);
          endDate.setMinutes(endDate.getMinutes() + countdownMinutes);
          endDate.setSeconds(endDate.getSeconds() + countdownSeconds);
          
          const timer{{ block.id }} = setInterval(function() {
            const now = new Date().getTime();
            const distance = endDate.getTime() - now;
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            const daysElement = document.getElementById('days-{{ block.id }}');
            const hoursElement = document.getElementById('hours-{{ block.id }}');
            const minutesElement = document.getElementById('minutes-{{ block.id }}');
            const secondsElement = document.getElementById('seconds-{{ block.id }}');
            
            // Handle days display based on hide_days and show_day_as_zero settings
            if (!hideDays && daysElement) {
              if (showDayAsZero) {
                daysElement.innerHTML = '00';
              } else {
                daysElement.innerHTML = days.toString().padStart(2, '0');
              }
            }
            
            if (hoursElement) hoursElement.innerHTML = hours.toString().padStart(2, '0');
            if (minutesElement) minutesElement.innerHTML = minutes.toString().padStart(2, '0');
            if (secondsElement) secondsElement.innerHTML = seconds.toString().padStart(2, '0');
            
            if (distance < 0) {
              clearInterval(timer{{ block.id }});
              if (!hideDays && daysElement) daysElement.innerHTML = '00';
              if (hoursElement) hoursElement.innerHTML = '00';
              if (minutesElement) minutesElement.innerHTML = '00';
              if (secondsElement) secondsElement.innerHTML = '00';
              
              {% if block.settings.hide_on_complete %}
                countdown{{ block.id }}.style.display = 'none';
              {% endif %}
              
              {% if block.settings.completed_text != blank %}
                countdown{{ block.id }}.innerHTML = '<div style="text-align: center; color: {{ block.settings.completed_text_color }}; font-size: {{ block.settings.completed_text_size }}px;">{{ block.settings.completed_text }}</div>';
              {% endif %}
            }
          }, 1000);
          
          // Clean up on section unload
          document.addEventListener('shopify:section:unload', function(event) {
            if (event.detail.sectionId === '{{ section.id }}') {
              clearInterval(timer{{ block.id }});
            }
          });
        }
      {% endif %}
    {% endfor %}
  }
  
  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initCountdownTimers();
      initSaleCountdownTimer();
    });
  } else {
    initCountdownTimers();
    initSaleCountdownTimer();
  }
  
  // Re-initialize in theme editor
  if (Shopify.designMode) {
    document.addEventListener('shopify:section:load', initCountdownTimers);
    document.addEventListener('shopify:section:unload', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        // Clean up any existing timers
        {% for block in section.blocks %}
          {% if block.type == 'countdown_timer' %}
            const countdown{{ block.id }} = document.getElementById('countdown-{{ block.id }}');
            if (countdown{{ block.id }}) {
              {% if block.settings.hide_days %}
                countdown{{ block.id }}.innerHTML = '<div class="time-block"><span class="time-number">00</span><span class="time-separator">:</span><span class="time-label">{{ block.settings.hours_label }}</span></div><div class="time-block"><span class="time-number">00</span><span class="time-separator">:</span><span class="time-label">{{ block.settings.minutes_label }}</span></div><div class="time-block"><span class="time-number">00</span><span class="time-label">{{ block.settings.seconds_label }}</span></div>';
