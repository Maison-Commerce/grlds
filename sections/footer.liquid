{% schema %}
{
  "name": "Maison Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Subscribe & Get 10% Off"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Be the first to know about new collections and exclusive offers."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email Input Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "chamber_of_commerce",
      "label": "Chamber of Commerce",
      "default": "Chamber of Commerce: 97143553"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Elandsgracht 89, 1016TR Amsterdam, Netherlands"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@grlds.com"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Geralds"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "link_list",
      "id": "shop_menu",
      "label": "Shop Menu"
    },
    {
      "type": "link_list",
      "id": "help_menu",
      "label": "Help Menu"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#1a1610"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Maison Footer"
    }
  ]
}
{% endschema %}

<footer class="maison_commerce_maison_footer">
  <div class="maison_commerce_maison_footer__container">
    <!-- Logo Section -->
    {% if section.settings.logo != blank %}
      <div class="maison_commerce_maison_footer__logo-section">
        <div class="maison_commerce_maison_footer__logo-wrapper">
          {{
            section.settings.logo
            | image_url: width: 200
            | image_tag:
              loading: 'lazy',
              class: 'maison_commerce_maison_footer__logo',
              alt: section.settings.logo.alt | default: shop.name
          }}
        </div>
      </div>
      <div class="maison_commerce_maison_footer__divider"></div>
    {% endif %}

    <!-- Newsletter Section -->
    <div class="maison_commerce_maison_footer__newsletter">
      <div class="maison_commerce_maison_footer__newsletter-content">
        {% if section.settings.newsletter_heading != blank %}
          <h2 class="maison_commerce_maison_footer__newsletter-heading">
            {{ section.settings.newsletter_heading }}
          </h2>
        {% endif %}

        {% if section.settings.newsletter_description != blank %}
          <p class="maison_commerce_maison_footer__newsletter-description">
            {{ section.settings.newsletter_description }}
          </p>
        {% endif %}
      </div>

      <form class="maison_commerce_maison_footer__newsletter-form" action="/contact#contact_form" method="post" accept-charset="UTF-8">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <input
          type="email"
          name="contact[email]"
          class="maison_commerce_maison_footer__newsletter-input"
          placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email' }}"
          required
        >
        
        <button type="submit" class="maison_commerce_maison_footer__newsletter-button">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 3L11 8L6 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>
    </div>

    <div class="maison_commerce_maison_footer__divider"></div>

    <!-- Navigation Section -->
    <div class="maison_commerce_maison_footer__navigation">
      <!-- Desktop Navigation -->
      <div class="maison_commerce_maison_footer__nav-desktop">
        <!-- Shop Column -->
        {% if section.settings.shop_menu != blank %}
          <div class="maison_commerce_maison_footer__nav-column">
            <h3 class="maison_commerce_maison_footer__nav-heading">Shop</h3>
            <ul class="maison_commerce_maison_footer__nav-links">
              {% for link in section.settings.shop_menu.links %}
                <li>
                  <a href="{{ link.url }}" class="maison_commerce_maison_footer__nav-link">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <!-- Help Column -->
        {% if section.settings.help_menu != blank %}
          <div class="maison_commerce_maison_footer__nav-column">
            <h3 class="maison_commerce_maison_footer__nav-heading">Help</h3>
            <ul class="maison_commerce_maison_footer__nav-links">
              {% for link in section.settings.help_menu.links %}
                <li>
                  <a href="{{ link.url }}" class="maison_commerce_maison_footer__nav-link">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <!-- Information Column -->
