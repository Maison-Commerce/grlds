{% schema %}
{
  "name": "Maison Icon with Text",
  "settings": [
    {
      "type": "html",
      "id": "icon",
      "label": "Icon SVG",
      "info": "Paste SVG code for the icon"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Perfect for gifting or quiet evenings in"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "icon_size_desktop",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Icon Size (Desktop)",
      "default": 18
    },
    {
      "type": "range",
      "id": "icon_size_mobile",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Icon Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "gap_desktop",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Icon and Text (Desktop)",
      "default": 12
    },
    {
      "type": "range",
      "id": "gap_mobile",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Gap Between Icon and Text (Mobile)",
      "default": 12
    },
    {
      "type": "range",
      "id": "text_font_size_desktop",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_font_size_mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "rgba(26, 26, 26, 0.75)"
    },
    {
      "type": "select",
      "id": "text_font_weight_desktop",
      "label": "Text Font Weight (Desktop)",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        }
      ],
      "default": "300"
    },
    {
      "type": "select",
      "id": "text_font_weight_mobile",
      "label": "Text Font Weight (Mobile)",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        }
      ],
      "default": "400"
    }
  ],
  "presets": [
    {
      "name": "Maison Icon with Text Description"
    }
  ]
}
{% endschema %}

<div class="maison_commerce_maison_icon_with_text_description" style="background-color: {{ section.settings.section_bg_color }};">
  <div class="maison_commerce_maison_icon_with_text_description__container">
    {% if section.settings.icon != blank or section.settings.text != blank %}
      <div class="maison_commerce_maison_icon_with_text_description__content">
        {% if section.settings.icon != blank %}
          <div class="maison_commerce_maison_icon_with_text_description__icon">
            {{ section.settings.icon }}
          </div>
        {% endif %}
        
        {% if section.settings.text != blank %}
          <p class="maison_commerce_maison_icon_with_text_description__text">
            {{ section.settings.text }}
          </p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .maison_commerce_maison_icon_with_text_description {
    width: 100%;
  }

  .maison_commerce_maison_icon_with_text_description__container {
    max-width: 100%;
    margin: 0 auto;
  }

  .maison_commerce_maison_icon_with_text_description__content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.gap_desktop }}px;
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_icon_with_text_description__content {
      flex-direction: column;
      gap: {{ section.settings.gap_mobile }}px;
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  .maison_commerce_maison_icon_with_text_description__icon {
    width: {{ section.settings.icon_size_desktop }}px;
    height: {{ section.settings.icon_size_desktop }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_icon_with_text_description__icon {
      width: {{ section.settings.icon_size_mobile }}px;
      height: {{ section.settings.icon_size_mobile }}px;
    }
  }

  .maison_commerce_maison_icon_with_text_description__icon svg,
  .maison_commerce_maison_icon_with_text_description__icon img {
    width: 100%;
    height: 100%;
    display: block;
  }

  .maison_commerce_maison_icon_with_text_description__text {
    font-family: 'Celex Grotesk', sans-serif;
    font-size: {{ section.settings.text_font_size_desktop }}px;
    font-weight: {{ section.settings.text_font_weight_desktop }};
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    text-align: center;
    margin: 0;
    letter-spacing: 0.32px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_icon_with_text_description__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
      font-weight: {{ section.settings.text_font_weight_mobile }};
      letter-spacing: 0;
    }
  }
</style>

