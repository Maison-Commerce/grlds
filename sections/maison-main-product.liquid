    display: flex;
    align-items: center;
    gap: 8px;
  }

  .maison_commerce_maison_main_product__variant-label {
    font-size: 12px;
    font-weight: 500;
    line-height: 1.5;
    color: rgba(26, 26, 26, 0.5);
    text-transform: uppercase;
  }

  .maison_commerce_maison_main_product__variant-value {
    font-size: 12px;
    font-weight: 500;
    line-height: 1.5;
    color: #1a1a1a;
    text-transform: uppercase;
  }

