  .maison_commerce_maison_main_product__info {
    width: 100%;
    max-width: 480px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_main_product__info {
      max-width: 100%;
      gap: 18px;
    }
  }

  /* Rating */
