<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productInfo = document.querySelector('#MainProduct-{{ section.id }}');
    if (!productInfo) return;

    const productData = JSON.parse(productInfo.dataset.productJson);

    // Handle variant thumbnail clicks
    const thumbnails = productInfo.querySelectorAll('.maison_commerce_maison_main_product__variant-thumbnail');
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', function() {
        const value = this.dataset.value;
        const optionPosition = parseInt(this.dataset.optionPosition);
        
        // Update active state
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        // Update selected value display
        const selectedValueEl = productInfo.querySelector('#selected-size-{{ section.id }}');
        if (selectedValueEl) {
          selectedValueEl.textContent = value;
        }
        
        // Trigger variant change via hidden form
        const variantInputs = productInfo.querySelectorAll(`input[name="options[${optionPosition}]"]`);
        variantInputs.forEach(input => {
          if (input.value === value) {
            input.checked = true;
            input.dispatchEvent(new Event('change', { bubbles: true }));
          }
        });
      });
    });

    // Handle variant option clicks
    const options = productInfo.querySelectorAll('.maison_commerce_maison_main_product__variant-option');
    options.forEach(option => {
      option.addEventListener('click', function() {
        const value = this.dataset.value;
        const optionPosition = parseInt(this.dataset.optionPosition);
        
        // Update active state
        const sameGroup = productInfo.querySelectorAll(`[data-option-position="${optionPosition}"].maison_commerce_maison_main_product__variant-option`);
        sameGroup.forEach(o => o.classList.remove('active'));
        this.classList.add('active');
        
        // Trigger variant change via hidden form
        const variantInputs = productInfo.querySelectorAll(`input[name="options[${optionPosition}]"]`);
        variantInputs.forEach(input => {
          if (input.value === value) {
            input.checked = true;
            input.dispatchEvent(new Event('change', { bubbles: true }));
          }
        });
      });
    });

    // Update button price on variant change
    productInfo.addEventListener('change', function(e) {
      if (e.target.name === 'id' || e.target.name && e.target.name.startsWith('options[')) {
        // Find selected variant
        const form = productInfo.querySelector('#product-form-{{ section.id }}');
        if (!form) return;
        
        const formData = new FormData(form);
        const selectedOptions = {};
        
        // Get all selected options
        form.querySelectorAll('input[name^="options["]:checked').forEach(input => {
          const match = input.name.match(/options\[(\d+)\]/);
          if (match) {
            selectedOptions[parseInt(match[1])] = input.value;
          }
        });
        
        // Find matching variant
        const variant = productData.variants.find(v => {
          return v.option1 === selectedOptions[1] && 
                 (!selectedOptions[2] || v.option2 === selectedOptions[2]) &&
                 (!selectedOptions[3] || v.option3 === selectedOptions[3]);
        });
        
        if (variant) {
          const priceEl = productInfo.querySelector('#button-price-{{ section.id }}');
          if (priceEl) {
            priceEl.textContent = new Intl.NumberFormat('{{ localization.country.currency.iso_code }}', {
              style: 'currency',
              currency: '{{ cart.currency.iso_code }}',
              minimumFractionDigits: 0
            }).format(variant.price / 100);
          }
          
          // Update hidden variant input
          const variantInput = form.querySelector('input[name="id"]');
          if (variantInput) {
            variantInput.value = variant.id;
          }
        }
      }
    });
  });
</script>

