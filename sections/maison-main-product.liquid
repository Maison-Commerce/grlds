    font-size: 12px;
    font-weight: 400;
    line-height: 1.5;
    color: #1a1a1a;
  }

  /* Title */
  .maison_commerce_maison_main_product__title {
    font-family: 'Dangmen', sans-serif;
    font-size: 32px;
    font-weight: 400;
    line-height: 1.3;
    color: #1a1a1a;
    text-transform: uppercase;
    margin: 0;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_main_product__title {
      font-size: 24px;
      line-height: 1.4;
    }
  }

  /* Description */
  .maison_commerce_maison_main_product__description {
    font-size: 12px;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(26, 26, 26, 0.75);
  }

  .maison_commerce_maison_main_product__description p {
    margin: 0;
  }

  /* Price */
  .maison_commerce_maison_main_product__price {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  /* Variant Picker */
  .maison_commerce_maison_main_product__variant {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .maison_commerce_maison_main_product__variant-header-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

