<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperContainer = document.querySelector('.maison_commerce_maison_propose_product__swiper');
    
    if (swiperContainer && window.innerWidth <= 990) {
      const progressBar = swiperContainer.querySelector('.maison_commerce_maison_propose_product__progress-bar');
      const prevButton = swiperContainer.querySelector('.maison_commerce_maison_propose_product__nav-button--prev');
      const nextButton = swiperContainer.querySelector('.maison_commerce_maison_propose_product__nav-button--next');
      
      const swiper = new Swiper('.maison_commerce_maison_propose_product__swiper', {
        slidesPerView: 'auto',
        spaceBetween: 16,
        centeredSlides: false,
        loop: false,
        navigation: {
          nextEl: nextButton,
          prevEl: prevButton,
        },
        breakpoints: {
            0: {
            slidesPerView: 1.5,
            },
            500: {
            slidesPerView: 3,
            }
        },
        on: {
          slideChange: function() {
            const progress = ((this.activeIndex + 1) / this.slides.length) * 100;
            if (progressBar) {
              progressBar.style.width = progress + '%';
            }
          },
        },
      });

      // Initialize progress bar
      if (progressBar && swiper) {
        const initialProgress = (1 / swiper.slides.length) * 100;
        progressBar.style.width = initialProgress + '%';
      }
    }
  });
</script>

