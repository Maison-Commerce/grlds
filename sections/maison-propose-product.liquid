<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="maison_commerce_maison_propose_product">
  <div class="maison_commerce_maison_propose_product__container">
    {% if section.settings.section_heading != blank %}
      <div class="maison_commerce_maison_propose_product__heading-wrapper">
        <h2 class="maison_commerce_maison_propose_product__heading">
          {{ section.settings.section_heading }}
        </h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <!-- Desktop Grid -->
      <div class="maison_commerce_maison_propose_product__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'product' %}
              {% assign product = block.settings.product %}
              {% if product != blank %}
                <div class="maison_commerce_maison_propose_product__card" {{ block.shopify_attributes }}>
                  {% if product.featured_image != blank %}
                    <div class="maison_commerce_maison_propose_product__image-wrapper">
                      {{
                        product.featured_image
                        | image_url: width: 1000
                        | image_tag:
                          loading: 'lazy',
                          class: 'maison_commerce_maison_propose_product__image',
                          alt: product.featured_image.alt | default: product.title
                      }}
                      {% if block.settings.badge_text != blank %}
                        <div class="maison_commerce_maison_propose_product__badge">
                          {{ block.settings.badge_text }}
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}

                  <div class="maison_commerce_maison_propose_product__content">
                    {% if product.title != blank %}
                      <p class="maison_commerce_maison_propose_product__title">
                        {{ product.title }}
                      </p>
                    {% endif %}

                    {% if product.price != blank %}
                      <div class="maison_commerce_maison_propose_product__price">
                        {% if product.price_min != product.price_max %}
                          {{ product.price_min | money }}–{{ product.price_max | money }}
                        {% elsif product.compare_at_price > product.price %}
                          <span class="maison_commerce_maison_propose_product__price--sale">{{ product.price | money }}</span>
                          <span class="maison_commerce_maison_propose_product__price--compare">{{ product.compare_at_price | money }}</span>
                        {% else %}
                          <span class="maison_commerce_maison_propose_product__price--sale">{{ product.price | money }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>

                  <a href="{{ product.url }}" class="maison_commerce_maison_propose_product__button">
                    <span>{{ block.settings.button_text | default: 'Shop Now' }}</span>
                    <svg class="maison_commerce_maison_propose_product__button-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>

      <!-- Mobile Swiper -->
      <div class="swiper maison_commerce_maison_propose_product__swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'product' %}
                {% assign product = block.settings.product %}
                {% if product != blank %}
                  <div class="swiper-slide maison_commerce_maison_propose_product__slide">
                    <div class="maison_commerce_maison_propose_product__card">
                      {% if product.featured_image != blank %}
                        <div class="maison_commerce_maison_propose_product__image-wrapper">
                          {{
                            product.featured_image
                            | image_url: width: 1000
                            | image_tag:
                              loading: 'lazy',
                              class: 'maison_commerce_maison_propose_product__image',
                              alt: product.featured_image.alt | default: product.title
                          }}
                          {% if block.settings.badge_text != blank %}
                            <div class="maison_commerce_maison_propose_product__badge">
                              {{ block.settings.badge_text }}
                            </div>
                          {% endif %}
                        </div>
                      {% endif %}

                      <div class="maison_commerce_maison_propose_product__content">
                        {% if product.title != blank %}
                          <p class="maison_commerce_maison_propose_product__title">
                            {{ product.title }}
                          </p>
                        {% endif %}

                        {% if product.price != blank %}
                          <div class="maison_commerce_maison_propose_product__price">
                            {% if product.price_min != product.price_max %}
                              {{ product.price_min | money }}–{{ product.price_max | money }}
                            {% elsif product.compare_at_price > product.price %}
                              <span class="maison_commerce_maison_propose_product__price--sale">{{ product.price | money }}</span>
                              <span class="maison_commerce_maison_propose_product__price--compare">{{ product.compare_at_price | money }}</span>
                            {% else %}
                              <span class="maison_commerce_maison_propose_product__price--sale">{{ product.price | money }}</span>
                            {% endif %}
                          </div>
                        {% endif %}
                      </div>

                      <a href="{{ product.url }}" class="maison_commerce_maison_propose_product__button">
                        <span>{{ block.settings.button_text | default: 'Shop Now' }}</span>
                      </a>
                    </div>
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>

        <!-- Navigation -->
        <div class="maison_commerce_maison_propose_product__navigation">
          <div class="maison_commerce_maison_propose_product__nav-button maison_commerce_maison_propose_product__nav-button--prev">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="maison_commerce_maison_propose_product__progress">
            <div class="maison_commerce_maison_propose_product__progress-bar"></div>
          </div>
          <div class="maison_commerce_maison_propose_product__nav-button maison_commerce_maison_propose_product__nav-button--next">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
