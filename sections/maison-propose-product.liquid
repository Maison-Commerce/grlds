    .maison_commerce_maison_propose_product__grid {
      display: none;
    }
  }

  /* Card */
  .maison_commerce_maison_propose_product__card {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  /* Image Wrapper */
  .maison_commerce_maison_propose_product__image-wrapper {
    position: relative;
    aspect-ratio: 325 / 420;
    background-color: #f8f8f8;
    overflow: hidden;
    width: 100%;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_propose_product__image-wrapper {
      aspect-ratio: 159 / 204;
    }
  }

  .maison_commerce_maison_propose_product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  /* Badge */
  .maison_commerce_maison_propose_product__badge {
    position: absolute;
    top: 8px;
    left: 8px;
    background-color: #ffffff;
    padding: 4px 8px;
    font-size: 10px;
    font-weight: 400;
    line-height: 1.5;
    color: #383838;
    border-radius: 0;
  }

  /* Content */
  .maison_commerce_maison_propose_product__content {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 12px 0;
    width: 100%;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_propose_product__content {
      padding: 8px 0;
    }
  }

  /* Title */
  .maison_commerce_maison_propose_product__title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 500;
    line-height: 1.5;
    color: {{ section.settings.title_color }};
    margin: 0;
    letter-spacing: 0.28px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_propose_product__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      letter-spacing: 0.32px;
