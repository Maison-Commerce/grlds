{% schema %}
{
  "name": "Maison Contact",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Contact us"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Do you have questions about our products, orders, or would you like to collaborate? We are happy to help! Please use the form below, and our team will respond as quickly as possible. We look forward to hearing from you!</p>"
    },
    {
      "type": "text",
      "id": "chamber_of_commerce",
      "label": "Chamber of Commerce",
      "default": "Chamber of Commerce: 97143553"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Elandsgracht 89, 1016TR Amsterdam, Netherlands"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@grlds.com"
    },
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Field Label",
      "default": "Your name"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Field Label",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "phone_label",
      "label": "Phone Field Label",
      "default": "Your phone number (optional)"
    },
    {
      "type": "text",
      "id": "message_label",
      "label": "Message Field Label",
      "default": "Describe the details of your inquiry..."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Send Message"
    },
    {
      "type": "image_picker",
      "id": "illustration_1",
      "label": "Illustration 1"
    },
    {
      "type": "image_picker",
      "id": "illustration_2",
      "label": "Illustration 2"
    },
    {
      "type": "image_picker",
      "id": "illustration_3",
      "label": "Illustration 3"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#fefefe"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#f0e3d1"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_right_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Left (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Right (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "heading_font_size_desktop",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size (Mobile)",
      "default": 24
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "range",
      "id": "description_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description Font Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "rgba(26, 26, 26, 0.75)"
    },
    {
      "type": "range",
      "id": "contact_info_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Contact Info Font Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "contact_info_color",
      "label": "Contact Info Color",
      "default": "rgba(26, 26, 26, 0.6)"
    },
    {
      "type": "range",
      "id": "input_font_size",
      "min": 10,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Input Font Size",
      "default": 12
    },
    {
      "type": "color",
      "id": "input_placeholder_color",
      "label": "Input Placeholder Color",
      "default": "#a8a8a8"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input Border Color",
      "default": "rgba(0, 0, 0, 0.08)"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Button Font Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#090909"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#fdfcfc"
    }
  ],
  "presets": [
    {
      "name": "Maison Contact"
    }
  ]
}
{% endschema %}

<div class="maison_commerce_maison_contact">
  <div class="maison_commerce_maison_contact__container">
    <div class="maison_commerce_maison_contact__content">
      <!-- Left Column: Contact Info -->
      <div class="maison_commerce_maison_contact__info">
        <div class="maison_commerce_maison_contact__header">
          {% if section.settings.section_heading != blank %}
            <h2 class="maison_commerce_maison_contact__heading">
              {{ section.settings.section_heading }}
            </h2>
          {% endif %}
          {% if section.settings.section_description != blank %}
            <div class="maison_commerce_maison_contact__description">
              {{ section.settings.section_description }}
            </div>
          {% endif %}
        </div>

        <div class="maison_commerce_maison_contact__contact-details">
          {% if section.settings.chamber_of_commerce != blank %}
            <div class="maison_commerce_maison_contact__contact-item">
              <div class="maison_commerce_maison_contact__contact-icon">
                <svg width="16" height="16" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0.625 7.5C0.625 9.32338 1.34933 11.0721 2.63864 12.3614C3.92796 13.6507 5.67664 14.375 7.5 14.375C9.32338 14.375 11.0721 13.6507 12.3614 12.3614C13.6507 11.0721 14.375 9.32338 14.375 7.5C14.375 5.67664 13.6507 3.92796 12.3614 2.63864C11.0721 1.34933 9.32338 0.625 7.5 0.625C5.67664 0.625 3.92796 1.34933 2.63864 2.63864C1.34933 3.92796 0.625 5.67664 0.625 7.5Z" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M5 6.25H7.5V10.625" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M5 10.625H10" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M7.5 4.375V3.125" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                </svg>
              </div>
              <span class="maison_commerce_maison_contact__contact-text">{{ section.settings.chamber_of_commerce }}</span>
            </div>
          {% endif %}

          {% if section.settings.address != blank %}
            <div class="maison_commerce_maison_contact__contact-item">
              <div class="maison_commerce_maison_contact__contact-icon">
                <svg width="16" height="16" viewBox="0 0 14 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3.125 10.9998C1.60694 11.3419 0.625 11.8866 0.625 12.5C0.625 13.5355 3.42322 14.375 6.875 14.375C10.3268 14.375 13.125 13.5355 13.125 12.5C13.125 11.8866 12.1431 11.3419 10.625 10.9998" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M7.1875 5.3125H6.5625V4.6875H7.1875V5.3125Z" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M2.5 5.02155C2.5 7.95256 6.875 11.25 6.875 11.25C6.875 11.25 11.25 7.95256 11.25 5.02155C11.25 2.59341 9.29125 0.625 6.875 0.625C4.45876 0.625 2.5 2.59341 2.5 5.02155Z" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                </svg>
              </div>
              <span class="maison_commerce_maison_contact__contact-text">{{ section.settings.address }}</span>
            </div>
          {% endif %}

          {% if section.settings.email != blank %}
            <div class="maison_commerce_maison_contact__contact-item">
              <div class="maison_commerce_maison_contact__contact-icon">
                <svg width="16" height="16" viewBox="0 0 15 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0.625 0.625H14.375V11.875H0.625V0.625Z" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                  <path d="M0.625 2.5L7.5 6.25L14.375 2.5" stroke="currentColor" stroke-opacity="0.75" stroke-width="1.25"/>
                </svg>
              </div>
              <span class="maison_commerce_maison_contact__contact-text">{{ section.settings.email }}</span>
            </div>
          {% endif %}
        </div>

        <!-- Illustrations -->
        {% if section.settings.illustration_1 != blank or section.settings.illustration_2 != blank or section.settings.illustration_3 != blank %}
          <div class="maison_commerce_maison_contact__illustrations">
            {% if section.settings.illustration_1 != blank %}
              <div class="maison_commerce_maison_contact__illustration">
                {{
                  section.settings.illustration_1
                  | image_url: width: 212
                  | image_tag:
                    loading: 'lazy',
                    class: 'maison_commerce_maison_contact__illustration-img',
                    alt: 'Illustration 1'
                }}
              </div>
            {% endif %}
            {% if section.settings.illustration_2 != blank %}
              <div class="maison_commerce_maison_contact__illustration">
                {{
                  section.settings.illustration_2
                  | image_url: width: 212
                  | image_tag:
                    loading: 'lazy',
                    class: 'maison_commerce_maison_contact__illustration-img',
                    alt: 'Illustration 2'
                }}
              </div>
            {% endif %}
            {% if section.settings.illustration_3 != blank %}
              <div class="maison_commerce_maison_contact__illustration">
                {{
                  section.settings.illustration_3
                  | image_url: width: 212
                  | image_tag:
                    loading: 'lazy',
                    class: 'maison_commerce_maison_contact__illustration-img',
                    alt: 'Illustration 3'
                }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Right Column: Contact Form -->
      <div class="maison_commerce_maison_contact__form-wrapper">
        {%- form 'contact', id: 'ContactForm', class: 'maison_commerce_maison_contact__form' -%}
          {%- if form.posted_successfully? -%}
            <div class="maison_commerce_maison_contact__form-message maison_commerce_maison_contact__form-message--success">
              <p>Thank you for contacting us. We'll get back to you as soon as possible.</p>
            </div>
          {%- elsif form.errors -%}
            <div class="maison_commerce_maison_contact__form-message maison_commerce_maison_contact__form-message--error">
              <p>Please correct the errors below:</p>
              <ul>
                {%- for field in form.errors -%}
                  <li>
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div class="maison_commerce_maison_contact__form-fields">
            <div class="maison_commerce_maison_contact__field">
              <input
                type="text"
                id="ContactForm-name"
                name="contact[name]"
                class="maison_commerce_maison_contact__input"
                autocomplete="name"
                placeholder="{{ section.settings.name_label | default: 'Your name' | upcase }}"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              >
            </div>

            <div class="maison_commerce_maison_contact__field">
              <input
                type="email"
                id="ContactForm-email"
                name="contact[email]"
                class="maison_commerce_maison_contact__input"
                autocomplete="email"
                placeholder="{{ section.settings.email_label | default: 'Your email address' | upcase }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                {% endif %}
                required
              >
            </div>

            <div class="maison_commerce_maison_contact__field">
              <input
                type="tel"
                id="ContactForm-phone"
                name="contact[phone]"
                class="maison_commerce_maison_contact__input"
                autocomplete="tel"
                placeholder="{{ section.settings.phone_label | default: 'Your phone number (optional)' | upcase }}"
                value="{% if form.phone %}{{ form.phone }}{% endif %}"
              >
            </div>

            <div class="maison_commerce_maison_contact__field maison_commerce_maison_contact__field--textarea">
              <textarea
                id="ContactForm-body"
                name="contact[body]"
                class="maison_commerce_maison_contact__textarea"
                rows="6"
                placeholder="{{ section.settings.message_label | default: 'Describe the details of your inquiry...' | upcase }}"
                required
              >{% if form.body %}{{ form.body }}{% endif %}</textarea>
            </div>
          </div>

          <button type="submit" class="maison_commerce_maison_contact__button">
            {{ section.settings.button_text | default: 'Send Message' | upcase }}
          </button>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

<style>
  /* Section Container */
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .maison_commerce_maison_contact {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    padding-left: {{ section.settings.padding_left_desktop }}px;
    padding-right: {{ section.settings.padding_right_desktop }}px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      padding-left: {{ section.settings.padding_left_mobile }}px;
      padding-right: {{ section.settings.padding_right_mobile }}px;
    }
  }

  /* Container */
  .maison_commerce_maison_contact__container {
    max-width: 1440px;
    margin: 0 auto;
  }

  /* Content Wrapper */
  .maison_commerce_maison_contact__content {
    display: flex;
    gap: 80px;
    align-items: flex-start;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__content {
      flex-direction: column;
      gap: 20px;
    }
  }

  /* Left Column: Contact Info */
  .maison_commerce_maison_contact__info {
    display: flex;
    flex-direction: column;
    gap: 44px;
    flex: 0 0 600px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__info {
      flex: 1;
      width: 100%;
      gap: 20px;
    }
  }

  /* Header */
  .maison_commerce_maison_contact__header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__header {
      text-align: center;
      gap: 8px;
    }
  }

  /* Heading */
  .maison_commerce_maison_contact__heading {
    font-family: 'Dangmen', sans-serif;
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: 400;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    margin: 0;
    text-transform: uppercase;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
      line-height: 1.4;
    }
  }

  /* Description */
  .maison_commerce_maison_contact__description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
  }

  .maison_commerce_maison_contact__description p {
    margin: 0;
  }

  /* Contact Details */
  .maison_commerce_maison_contact__contact-details {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .maison_commerce_maison_contact__contact-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 0;
  }

  .maison_commerce_maison_contact__contact-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.contact_info_color }};
    opacity: 0.6;
  }

  .maison_commerce_maison_contact__contact-icon svg {
    width: 100%;
    height: 100%;
  }

  .maison_commerce_maison_contact__contact-text {
    font-size: {{ section.settings.contact_info_font_size }}px;
    font-weight: 400;
    line-height: 1.5;
    color: {{ section.settings.contact_info_color }};
    opacity: 0.6;
  }

  /* Illustrations */
  .maison_commerce_maison_contact__illustrations {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__illustrations {
      gap: 24px;
      justify-content: center;
    }
  }

  .maison_commerce_maison_contact__illustration {
    width: 106px;
    height: 124px;
    border-radius: 48px;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__illustration {
      width: 77px;
      height: 90px;
    }
  }

  .maison_commerce_maison_contact__illustration-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    mix-blend-mode: multiply;
  }

  /* Right Column: Form */
  .maison_commerce_maison_contact__form-wrapper {
    width: 100%;
    max-width: 612px;
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__form-wrapper {
      width: 100%;
    }
  }

  .maison_commerce_maison_contact__form {
    display: flex;
    flex-direction: column;
    gap: 32px;
    width: 100%;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__form {
      gap: 16px;
    }
  }

  /* Form Messages */
  .maison_commerce_maison_contact__form-message {
    padding: 16px;
    border-radius: 4px;
    font-size: 14px;
    line-height: 1.5;
  }

  .maison_commerce_maison_contact__form-message--success {
    background-color: #d4edda;
    color: #155724;
  }

  .maison_commerce_maison_contact__form-message--error {
    background-color: #f8d7da;
    color: #721c24;
  }

  .maison_commerce_maison_contact__form-message ul {
    margin: 8px 0 0 0;
    padding-left: 20px;
  }

  .maison_commerce_maison_contact__form-message li {
    margin: 4px 0;
  }

  /* Form Fields */
  .maison_commerce_maison_contact__form-fields {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .maison_commerce_maison_contact__field {
    position: relative;
  }

  .maison_commerce_maison_contact__input,
  .maison_commerce_maison_contact__textarea {
    width: 100%;
    border: 1px solid {{ section.settings.input_border_color }};
    background-color: #ffffff;
    padding: 8px 22px;
    font-size: {{ section.settings.input_font_size }}px;
    font-weight: 400;
    line-height: 1.5;
    font-family: 'Celex Grotesk', sans-serif;
    color: #1a1a1a;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }

  .maison_commerce_maison_contact__input {
    height: 45px;
  }

  .maison_commerce_maison_contact__textarea {
    min-height: 120px;
    resize: vertical;
    padding-top: 8px;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__textarea {
      min-height: 96px;
    }
  }

  .maison_commerce_maison_contact__input::placeholder,
  .maison_commerce_maison_contact__textarea::placeholder {
    color: {{ section.settings.input_placeholder_color }};
    text-transform: uppercase;
  }

  .maison_commerce_maison_contact__input:focus,
  .maison_commerce_maison_contact__textarea:focus {
    outline: none;
    border-color: #1a1a1a;
  }

  /* Button */
  .maison_commerce_maison_contact__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 500;
    line-height: 1.5;
    text-transform: uppercase;
    border: none;
    padding: 16px 32px;
    height: 56px;
    cursor: pointer;
    transition: opacity 0.3s ease;
    font-family: 'Celex Grotesk', sans-serif;
    width: 100%;
  }

  @media (max-width: 990px) {
    .maison_commerce_maison_contact__button {
      height: 45px;
      padding: 12px 24px;
    }
  }

  .maison_commerce_maison_contact__button:hover {
