<style>
    .maison-variant-related-pr-wrapper{
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
    }
    .maison-variant-related-pr{
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .maison-variant-related-pr-item{
        width: 64px;
        height: 64px;
        border: 1.5px solid transparent;
        transition: all 0.3s ease;
    }

    .maison-variant-related-pr-item:hover{
        border-color: #2d2d2d;
    }

    .maison-variant-related-pr-item.current{
        border-color: #2d2d2d;
    }

    .maison-variant-related-pr-item img{
        width: 100%;
        height: 100%;
    }
</style>
<div class="maison-variant-related-pr-wrapper">
    <div class="maison_commerce_maison_main_product__variant-label">
        Scent:
    </div>
    <div class="maison-variant-related-pr">
        <a href="{{ product.url }}" class="maison-variant-related-pr-item current">
            <img src="{{ product.featured_image.src | image_url }}">
        </a>
        {% for item in product.metafields.custom.related_products.value %}
            <a href="{{ item.url }}" class="maison-variant-related-pr-item">
                <img src="{{ item.featured_image.src | image_url }}">
            </a>
        {% endfor %}
    </div>
</div>