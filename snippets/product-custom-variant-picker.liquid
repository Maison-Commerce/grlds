<style>
    .maison-variant-related-pr-wrapper{
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
    }
    .maison-variant-related-pr-wrapper a{
        text-decoration: none;
    }

    .maison-variant-related-pr-wrapper a.current{
        outline-color: #2d2d2d;
    }
    .maison-variant-related-pr{
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .maison-variant-related-pr-item{
        width: 64px;
        height: 64px;
        border: 1.5px solid transparent;
        transition: all 0.3s ease;


    }

    .maison-variant-related-pr-item:hover{
        border-color: #2d2d2d;
    }

    .maison-variant-related-pr-item.current{
        border-color: #2d2d2d;
    }

    .maison-variant-related-pr-item img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
<div class="maison-variant-related-pr-wrapper">
    <div class="maison_commerce_maison_main_product__variant-label">
        {{ title }}:
    </div>
    <div class="maison-variant-related-pr">
        <a href="{{ product.url }}" class="maison_commerce_maison_main_product__variant-option current">
            {{ product.metafields.custom.related_products_variant }}
        </a>
        {% for item in product.metafields.custom.related_products.value %}
            <a href="{{ item.url }}" class="maison_commerce_maison_main_product__variant-option">
                {{ item.metafields.custom.related_products_variant }}
            </a>
        {% endfor %}
    </div>
</div>