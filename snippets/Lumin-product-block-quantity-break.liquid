                  alt="{{ auto_add_product.title }}"
                  width="{{ block.settings.auto_add_image_size }}"
                  height="{{ block.settings.auto_add_image_size }}"
                  style="width: {{ block.settings.auto_add_image_size }}px; height: {{ block.settings.auto_add_image_size }}px; object-fit: cover; border-radius: 4px;"
                >
              {% endif %}
            {% endif %}
            <span style="font-size: {{block.settings.auto_add_indicator_text_size}}px;">{{ block.settings.auto_add_indicator_text | default: '+ FREE Gift' }}</span>
          </div>
          {% if block.settings.show_auto_add_discount %}
            {% assign original_price = auto_add_variant.compare_at_price | default: auto_add_variant.price %}
            {% if block.settings.auto_add_discount_type == 'percentage' %}
              {% assign discount_amount = original_price | times: block.settings.auto_add_discount_value | divided_by: 100.0 %}
              {% assign discounted_price = original_price | minus: discount_amount %}
            {% elsif block.settings.auto_add_discount_type == 'fixed' %}
              {% assign discount_amount = block.settings.auto_add_discount_value_text | times: 100 %}
              {% assign discounted_price = original_price | minus: discount_amount %}
            {% endif %}
            
            {% if discount_amount > 0 %}
              <div style="display: flex; align-items: flex-end; gap: 5px;">
                <span style="text-decoration: line-through; opacity: 0.8; font-size: {{block.settings.auto_add_indicator_price_size}}px; color: {{ block.settings.auto_add_indicator_sale_color }};">{{ original_price | money }}</span>
                <span style="font-weight: 600; color: {{ block.settings.auto_add_indicator_price_color }}; font-size: {{block.settings.auto_add_indicator_price_size}}px;">{{ discounted_price | money }}</span>
              </div>
            {% else %}
              <span style="font-weight: 600;font-size: {{block.settings.auto_add_indicator_price_size}}px; color: {{ block.settings.auto_add_indicator_price_color }};">{{ discounted_price | money }}</span>
            {% endif %}
          {% elsif auto_add_variant.compare_at_price and auto_add_variant.compare_at_price > auto_add_variant.price %}
            <span style="opacity: 0.8; font-size: {{block.settings.auto_add_indicator_price_size}}px; color: {{ block.settings.auto_add_indicator_sale_color }};">{{ auto_add_variant.compare_at_price | money }}</span> 
          {% endif %}
        </div>
      {% endif %}
      </div>
    </label>
    </div>
</lumin-product-qty-break>
{% endif %}
{% endif %}
 
