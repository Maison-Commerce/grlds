{% for collection in product.collections %}
  {% assign currect_collection = collection.id %}
{% endfor %}

{% assign selected_product = block.settings.selected_product %}
{% assign selected_collection = block.settings.selected_collection %}
{% assign all_products_true = block.settings.show_on_all_products %}
{% assign auto_add_product = block.settings.auto_add_product %}

{% comment %} Determine which variant to auto-add based on settings {% endcomment %}
{% assign auto_add_variant = null %}
{% if auto_add_product != blank %}
  {% case block.settings.auto_add_variant_selection %}
    {% when 'default' %}
      {% assign auto_add_variant = auto_add_product.selected_or_first_available_variant %}
    {% when 'lowest_price' %}
      {% assign auto_add_variant = auto_add_product.variants | sort: 'price' | first %}
    {% else %}
      {% assign auto_add_variant = auto_add_product.selected_or_first_available_variant %}
  {% endcase %}
{% endif %}

{% if selected_product != blank or selected_collection != blank or all_products_true != blank %}
  {% assign show_block = false %}

   {% comment %}
    Check if the current product matches any of the selected products in the list
  {% endcomment %}
  {% if selected_product != blank %}
    {% for selected_item in selected_product %}
      {% if product.id == selected_item.id %}
        {% assign show_block = true %}
      {% endif %}
    {% endfor %}
  {% endif %} 

  {% comment %}
    Check if the current collection matches the selected collection
  {% endcomment %}
  {% if selected_collection != blank and currect_collection == selected_collection.id %}
    {% assign show_block = true %}
  {% endif %}

  {% comment %}
    Check if all products is selected
  {% endcomment %}

  {% if all_products_true %}
    {% assign show_block = true %}
  {% endif %}

  {% if show_block %}
{% liquid
  assign border_radius = block.settings.border_radius
  assign border_thickness = block.settings.border_thickness
  assign current_variant = product.selected_or_first_available_variant

  assign qty = block.settings.qty
  assign discount = block.settings.discount
  assign fixed_price = block.settings.fixed_price
  assign current_price = qty | times: product.selected_or_first_available_variant.price
  assign compare_total = current_price
  assign total_compare_price = qty | times: product.selected_or_first_available_variant.compare_at_price
  

  if block.settings.discount_type == 'percentage'
  assign discountq = discount | append: '%'
  assign raw_total = 100 | minus: discount | divided_by: 100.0 | times: current_price
  assign rounded_total = raw_total | times: 100 | ceil | divided_by: 100.0
  assign unitprice = rounded_total | divided_by: qty | money
  assign total_saving_amount = current_price | minus: rounded_total | money
else
  assign discountq = fixed_price | money
  assign total_cents = current_price | minus: fixed_price
  assign rounded_total = total_cents  | times: 100 | ceil | divided_by: 100.0
  assign unitprice = rounded_total | divided_by: qty | money
  assign total_saving_amount = current_price | minus: rounded_total | money
endif

 

  assign original_compare_price = total_compare_price
  if original_compare_price == 0 or original_compare_price == blank
    assign original_compare_price = current_price
  endif
  
  if original_compare_price > rounded_total and original_compare_price > 0
    assign actual_discount_percentage = original_compare_price | minus: rounded_total | times: 100.0 | divided_by: original_compare_price | round: 1
    assign actual_discount_display = actual_discount_percentage | append: '%'
  else
    assign actual_discount_percentage = 0
    assign actual_discount_display = ''
  endif
  
  comment 
  Set up placeholders:
  [unit] = per unit price (after discount)
  [$] = total saving amount (from compare price if original type, otherwise from block discount)
  [%] = saving percentage (calculated if compare_price_type is original, otherwise block settings)
  endcomment
  
  comment 
  Per unit price placeholder 
  endcomment
  assign unit_placeholder = unitprice
  
  comment 
  Total saving amount placeholder (for entire quantity break)
  endcomment
  if block.settings.compare_price_type == 'original' and original_compare_price > rounded_total
    assign saving_amount_placeholder = original_compare_price | minus: rounded_total | money
  else
    assign saving_amount_placeholder = total_saving_amount
  endif
  
  comment Saving percentage placeholder 
  endcomment
  if block.settings.compare_price_type == 'original' and actual_discount_display != blank and actual_discount_display != ''
    assign saving_percentage_placeholder = actual_discount_display
  else
    assign saving_percentage_placeholder = discountq
  endif

  for count in (1..qty)
    unless forloop.last
      assign current_variant_ids = current_variant_ids | append: current_variant.id | append: ','
    else
      assign current_variant_ids = current_variant_ids | append: current_variant.id
    endunless
  endfor
%} 

