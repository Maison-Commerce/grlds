{% comment %}
  Renders a product media gallery. Should be used with 'media-gallery.js'
  Also see 'product-media-modal'

  Accepts:
  - product: {Object} Product liquid object
  - variant_images: {Array} Product images associated with a variant
  - has_filtering: {Boolean} Whether variant media filtering is enabled
  - product_specific_filtering: {Boolean} Whether filtering is product-specific
  - limit: {Number} (optional) When passed, limits the number of media items to render

  Usage:
  {% render 'product-media-gallery-vertical', variant_images: variant_images %}
{% endcomment %}

{%- liquid
  assign variant_images = variant_images | default: blank
-%}

{%- liquid
  if has_filtering
    case section.settings.variant_image_filtering
      when 'option1'
        assign option_filter = product.selected_or_first_available_variant.option1
      when 'option2'
        assign option_filter = product.selected_or_first_available_variant.option2
      when 'option3'
        assign option_filter = product.selected_or_first_available_variant.option3
    endcase
  endif

  if section.settings.hide_variants and variant_images and variant_images.size > 0 and variant_images.size == product.media.size
    assign single_media_visible = true
  endif

  if limit == 1
    assign single_media_visible = true
  endif

  assign media_count = product.media.size
  if section.settings.hide_variants and media_count > 1 and variant_images and variant_images.size > 0
    assign media_count = media_count | minus: variant_images.size | plus: 1
  endif

  if media_count == 1 or single_media_visible
    assign single_media_visible_mobile = true
  endif

  if media_count == 0 or single_media_visible_mobile or section.settings.mobile_thumbnails == 'show' or section.settings.mobile_thumbnails == 'columns' and media_count < 3 or section.settings.mobile_thumbnails == 'dots'
    assign hide_mobile_slider = true
  endif
  if section.settings.mobile_thumbnails == 'dots'
      assign hide_mobile_slider = true
    endif

  if section.settings.media_size == 'large'
    assign media_width = 0.65
  elsif section.settings.media_size == 'medium'
    assign media_width = 0.55
  elsif section.settings.media_size == 'small'
    assign media_width = 0.45
  endif
-%}

<style>
  @media screen and (max-width: 749px) {
  .quick-add-modal__content-info .product__media-list .product__media-item {
  width: 100% !important;
  }
  .slider.slider--mobile.lumin-slider-no-padding .slider__slide  {
    padding-top: max(0, var(--shadow-padding-top));
  }
  }
  @media screen and (min-width: 750px){
  .thumbnail-list-lm {
  display: flex !important;
  flex-direction: column;
  width: {{section.settings.thumbnail_size | default: '70'}}px;
  height: 100%;
  flex-wrap: nowrap;
  overflow: auto;
  grid-gap: var(--grid-desktop-horizontal-spacing);
  }
  .thumbnail-list-lm > li > .thumbnail {
    border-radius: {{ section.settings.thumbnail_radius | default: '0' }}px;
    width: calc({{section.settings.thumbnail_size | default: '70'}}px - 2px);
    margin-left: 1px;
    margin-top: 1px;
  }
  .vertical_thumb_lm {
  display: flex;
  gap: var(--grid-desktop-vertical-spacing);
  align-items: flex-start;
  {% if section.settings.gallery_layout == 'vertical_left' %}
  flex-direction: row-reverse;
  {% endif %}
  }
 .lm-slider-main {
    {% if product.media.size == 1 %}
      width:100%;  
    {% else %}
     width: calc(100% - {{section.settings.thumbnail_size | default: '70'}}px - 16px); 
    {% endif %}
    height: auto;
  }
  .quick-add-modal__content-info slider-component {
    width: 100%;
  }

  .lm-slider-thumb {
  width: {{section.settings.thumbnail_size | default: '70'}}px;
  height: 0;
  opacity: 0;
  transition: opacity 0.3s ease;
  }
  
  .lm-slider-thumb.height-synced {
  opacity: 1;
  }
  }
</style>

<media-gallery
  id="MediaGallery-{{ section.id }}"
  data-section="{{ section.id }}"
  {% if has_filtering %}
    data-filtering-option="{{ section.settings.variant_image_filtering }}"
    data-product-specific-filtering="{{ product_specific_filtering }}"
  {% endif %}
  role="region"
  {% if section.settings.enable_sticky_info %}
    class="product__column-sticky"
  {% endif %}
  aria-label="{{ 'products.product.media.gallery_viewer' | t }}"
  data-desktop-layout="{{ section.settings.gallery_layout }}"
  data-section-settings="{{ section.settings | json | escape }}"
>
  <div id="GalleryStatus-{{ section.id }}" class="visually-hidden" role="status"></div>
<div class="vertical_thumb_lm">
  <slider-component id="GalleryViewer-{{ section.id }}" class="slider-mobile-gutter lm-slider-main">
    <a class="skip-to-content-link button visually-hidden quick-add-hidden" href="#ProductInfo-{{ section.id }}">
      {{ 'accessibility.skip_to_product_info' | t }}
    </a>
    <ul
      id="Slider-Gallery-{{ section.id }}"
      class="product__media-list contains-media grid grid--peek list-unstyled lumin-slider slider slider--mobile lumin-slider-no-padding"
      role="list"
    >
      {%- comment -%} Check if feature image first is enabled {%- endcomment -%}
      {%- assign show_feature_first = section.settings.show_feature_image_first -%}
      
      {%- if show_feature_first -%}
        {%- comment -%} Show first product media (feature image) first {%- endcomment -%}
        {%- if product.media.first != null -%}
          {%- assign first_media = product.media.first -%}
          {%- liquid
            assign hidden_class = ''
            if has_filtering and first_media.alt != option_filter and first_media.alt != 'always_display' and first_media.alt != blank
              assign hidden_class = ' hidden'
            endif
          -%}
          <li
            id="Slide-{{ section.id }}-{{ first_media.id }}"
            class="product__media-item grid__item slider__slide is-active{% if single_media_visible %} product__media-item--single{% endif %}{% if first_media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{{ hidden_class }}"
            data-media-id="{{ section.id }}-{{ first_media.id }}"
            data-alt="{{ first_media.alt }}"
          >
            {%- assign media_position = 1 -%}
            {% render 'product-thumbnail',
              media: first_media,
              media_count: media_count,
              position: media_position,
              desktop_layout: section.settings.gallery_layout,
              mobile_layout: section.settings.mobile_thumbnails,
              loop: section.settings.enable_video_looping,
              modal_id: section.id,
              xr_button: true,
              media_width: media_width,
              media_fit: section.settings.media_fit,
              constrain_to_viewport: section.settings.constrain_to_viewport,
              lazy_load: false
            %}
          </li>
        {%- endif -%}
        
        {%- comment -%} Show variant featured media if it exists and is different from first media {%- endcomment -%}
        {%- if product.selected_or_first_available_variant.featured_media != null and product.selected_or_first_available_variant.featured_media.id != product.media.first.id -%}
          {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
          {%- liquid
            assign hidden_class = ''
            if has_filtering and featured_media.alt != option_filter and featured_media.alt != 'always_display' and featured_media.alt != blank
              assign hidden_class = ' hidden'
            endif
          -%}
          <li
            id="Slide-{{ section.id }}-{{ featured_media.id }}"
            class="product__media-item grid__item slider__slide{% if single_media_visible %} product__media-item--single{% endif %}{% if featured_media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{{ hidden_class }}"
            data-media-id="{{ section.id }}-{{ featured_media.id }}"
            data-alt="{{ featured_media.alt }}"
          >
            {%- assign media_position = media_position | plus: 1 -%}
            {% render 'product-thumbnail',
              media: featured_media,
              media_count: media_count,
              position: media_position,
              desktop_layout: section.settings.gallery_layout,
              mobile_layout: section.settings.mobile_thumbnails,
              loop: section.settings.enable_video_looping,
              modal_id: section.id,
              xr_button: true,
              media_width: media_width,
              media_fit: section.settings.media_fit,
              constrain_to_viewport: section.settings.constrain_to_viewport,
              lazy_load: true
            %}
          </li>
        {%- endif -%}
        
        {%- comment -%} Show remaining product media, excluding first media and variant featured media {%- endcomment -%}
        {%- for media in product.media -%}
          {% if media_position >= limit
            or media_position >= 1
            and section.settings.hide_variants
            and variant_images and variant_images.size > 0 and variant_images contains media.src
          %}
            {% continue %}
          {% endif %}

          {%- unless media.id == product.media.first.id or media.id == product.selected_or_first_available_variant.featured_media.id -%}
            {%- liquid
              assign hidden_class = ''
              if has_filtering and media.alt != option_filter and media.alt != 'always_display' and media.alt != blank
                assign hidden_class = ' hidden'
              endif
            -%}
            <li
              id="Slide-{{ section.id }}-{{ media.id }}"
              class="product__media-item grid__item slider__slide{% if single_media_visible %} product__media-item--single{% endif %}{% if product.selected_or_first_available_variant.featured_media == nil and forloop.index == 1 %} is-active{% endif %}{% if media.media_type != 'image' and media.media_type != 'video' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{{ hidden_class }}"
              data-media-id="{{ section.id }}-{{ media.id }}"
              data-alt="{{ media.alt }}"
            >
              {%- liquid
                assign media_position = media_position | plus: 1
                assign lazy_load = true
              -%}
              {% render 'product-thumbnail',
                media: media,
                media_count: media_count,
                position: media_position,
                desktop_layout: section.settings.gallery_layout,
                mobile_layout: section.settings.mobile_thumbnails,
                loop: section.settings.enable_video_looping,
                modal_id: section.id,
                xr_button: true,
                media_width: media_width,
                media_fit: section.settings.media_fit,
                constrain_to_viewport: section.settings.constrain_to_viewport,
                lazy_load: lazy_load
              %}
            </li>
          {%- endunless -%}
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Original behavior: Show variant featured media first {%- endcomment -%}
        {%- if product.selected_or_first_available_variant.featured_media != null -%}
        {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
        {%- liquid
          assign hidden_class = ''
          if has_filtering and featured_media.alt != option_filter and featured_media.alt != 'always_display' and featured_media.alt != blank
            assign hidden_class = ' hidden'
          endif
        -%}
        <li
          id="Slide-{{ section.id }}-{{ featured_media.id }}"
          class="product__media-item grid__item slider__slide is-active{% if single_media_visible %} product__media-item--single{% endif %}{% if featured_media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{{ hidden_class }}"
          data-media-id="{{ section.id }}-{{ featured_media.id }}"
          data-alt="{{ featured_media.alt }}"
        >
          {%- assign media_position = 1 -%}
          {% render 'product-thumbnail',
            media: featured_media,
            media_count: media_count,
            position: media_position,
            desktop_layout: section.settings.gallery_layout,
            mobile_layout: section.settings.mobile_thumbnails,
            loop: section.settings.enable_video_looping,
            modal_id: section.id,
            xr_button: true,
            media_width: media_width,
            media_fit: section.settings.media_fit,
            constrain_to_viewport: section.settings.constrain_to_viewport,
            lazy_load: false
          %}
        </li>
      {%- endif -%}
      {%- for media in product.media -%}
        {% if media_position >= limit
          or media_position >= 1
          and section.settings.hide_variants
          and variant_images and variant_images.size > 0 and variant_images contains media.src
        %}
          {% continue %}
        {% endif %}

        {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
          {%- liquid
            assign hidden_class = ''
            if has_filtering and media.alt != option_filter and media.alt != 'always_display' and media.alt != blank
              assign hidden_class = ' hidden'
            endif
          -%}
          <li
            id="Slide-{{ section.id }}-{{ media.id }}"
            class="product__media-item grid__item slider__slide{% if single_media_visible %} product__media-item--single{% endif %}{% if product.selected_or_first_available_variant.featured_media == nil and forloop.index == 1 %} is-active{% endif %}{% if media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{{ hidden_class }}"
            data-media-id="{{ section.id }}-{{ media.id }}"
            data-alt="{{ media.alt }}"
          >
            {%- liquid
              assign media_position = media_position | default: 0 | plus: 1
              assign lazy_load = false
              if media_position > 1
                assign lazy_load = true
              endif
            -%}
            {% render 'product-thumbnail',
              media: media,
              media_count: media_count,
              position: media_position,
              desktop_layout: section.settings.gallery_layout,
              mobile_layout: section.settings.mobile_thumbnails,
              loop: section.settings.enable_video_looping,
              modal_id: section.id,
              xr_button: true,
              media_width: media_width,
              media_fit: section.settings.media_fit,
              constrain_to_viewport: section.settings.constrain_to_viewport,
              lazy_load: lazy_load
            %}
          </li>
        {%- endunless -%}
      {%- endfor -%}
      {%- endif -%}
    </ul>
    <div class="slider-buttons quick-add-hidden{% if hide_mobile_slider %} small-hide{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter caption">
        <span class="slider-counter--current">1</span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
        <span class="slider-counter--total">{{ media_count }}</span>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  </slider-component>
  {%- if first_3d_model -%}
    <button
      class="button button--full-width product__xr-button"
      type="button"
      aria-label="{{ 'products.product.xr_button_label' | t }}"
      data-shopify-xr
      data-shopify-model3d-id="{{ first_3d_model.id }}"
      data-shopify-title="{{ product.title | escape }}"
      data-shopify-xr-hidden
    >
      <span class="svg-wrapper">
        {{- 'icon-3d-model.svg' | inline_asset_content -}}
      </span>
      {{ 'products.product.xr_button' | t }}
    </button>
  {%- endif -%}
  {%- liquid
    assign is_not_limited_to_single_item = false
    if limit == null or limit > 1
      assign is_not_limited_to_single_item = true
    endif
  -%}
  {%- if is_not_limited_to_single_item
    and media_count > 1
    and section.settings.gallery_layout contains 'thumbnail' or section.settings.gallery_layout contains 'vertical_right' or section.settings.gallery_layout contains 'vertical_left'
    or section.settings.mobile_thumbnails == 'show'
  -%}
    <slider-component
      id="GalleryThumbnails-{{ section.id }}"
      class="lm-slider-thumb thumbnail-slider slider-mobile-gutter quick-add-hidden{% unless section.settings.gallery_layout contains 'vertical_right' or section.settings.gallery_layout contains 'vertical_left' %} medium-hide large-up-hide{% endunless %}{% if section.settings.mobile_thumbnails != 'show' %} small-hide{% endif %}{% if media_count <= 3 %} thumbnail-slider--no-slide{% endif %}"
    >
      <button
        type="button"
        class="slider-button slider-button--prev{% if media_count <= 3 %} small-hide{% endif %}{% if media_count <= 4 %} medium-hide large-up-hide{% endif %}"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        aria-controls="GalleryThumbnails-{{ section.id }}"
        data-step="3"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <ul
        id="Slider-Thumbnails-{{ section.id }}"
        class="thumbnail-list-lm thumbnail-list list-unstyled slider slider--mobile{% if section.settings.gallery_layout == 'thumbnail_slider' %} slider--tablet-up{% endif %}"
      >
        {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width | minus: 100 | times: media_width | round }} - 4rem) / 4),
          (min-width: 990px) calc(({{ media_width | times: 100 }}vw - 4rem) / 4),
          (min-width: 750px) calc((100vw - 15rem) / 8),
          calc((100vw - 8rem) / 3)
        {%- endcapture -%}

        {%- if show_feature_first -%}
          {%- comment -%} Show first product media thumbnail first {%- endcomment -%}
          {%- if product.media.first != null -%}
          {%- liquid
            capture media_index
              if product.media.first.media_type == 'model'
                increment model_index
              elsif product.media.first.media_type == 'video' or product.media.first.media_type == 'external_video'
                increment video_index
              elsif product.media.first.media_type == 'image'
                increment image_index
              endif
            endcapture
            assign media_index = media_index | plus: 1
            assign hidden_class = ''
            if has_filtering and product.media.first.alt != option_filter and product.media.first.alt != 'always_display' and product.media.first.alt != blank
              assign hidden_class = ' hidden'
            endif
          -%}
          <li
            id="Slide-Thumbnails-{{ section.id }}-0"
            class="thumbnail-list__item slider__slide {{ section.settings.thumbnail_layout | default: 'medium' }}{% if section.settings.hide_variants and variant_images and variant_images.size > 0 and variant_images contains product.media.first.src %} thumbnail-list_item--variant{% endif %}{{ hidden_class }}"
            data-target="{{ section.id }}-{{ product.media.first.id }}"
            data-media-position="{{ media_index }}"
            data-alt="{{ product.media.first.alt }}"
          >
            {%- capture thumbnail_id -%}
              Thumbnail-{{ section.id }}-0
            {%- endcapture -%}
            <button
              class="thumbnail global-media-settings global-media-settings--no-shadow"
              aria-label="{%- if product.media.first.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif product.media.first.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif product.media.first.media_type == 'video' or product.media.first.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
              aria-current="true"
              aria-controls="GalleryViewer-{{ section.id }}"
              aria-describedby="{{ thumbnail_id }}"
            >
              {{
                product.media.first.preview_image
                | image_url: width: 416
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '54, 74, 104, 162, 208, 324, 416',
                  id: thumbnail_id,
                  alt: product.media.first.alt
                | escape
              }}
            </button>
          </li>
        {%- endif -%}
        
        {%- comment -%} Show variant featured media thumbnail if it exists and is different from first media {%- endcomment -%}
        {%- if product.selected_or_first_available_variant.featured_media != null and product.selected_or_first_available_variant.featured_media.id != product.media.first.id -%}
          {%- liquid
            capture media_index
              if product.selected_or_first_available_variant.featured_media.media_type == 'model'
                increment model_index
              elsif product.selected_or_first_available_variant.featured_media.media_type == 'video' or product.selected_or_first_available_variant.featured_media.media_type == 'external_video'
                increment video_index
              elsif product.selected_or_first_available_variant.featured_media.media_type == 'image'
                increment image_index
              endif
            endcapture
            assign media_index = media_index | plus: 1
            assign hidden_class = ''
            if has_filtering and product.selected_or_first_available_variant.featured_media.alt != option_filter and product.selected_or_first_available_variant.featured_media.alt != 'always_display' and product.selected_or_first_available_variant.featured_media.alt != blank
              assign hidden_class = ' hidden'
            endif
          -%}
          <li
            id="Slide-Thumbnails-{{ section.id }}-1"
            class="thumbnail-list__item slider__slide {{ section.settings.thumbnail_layout | default: 'medium' }}{% if section.settings.hide_variants and variant_images and variant_images.size > 0 and variant_images contains product.selected_or_first_available_variant.featured_media.src %} thumbnail-list_item--variant{% endif %}{{ hidden_class }}"
            data-target="{{ section.id }}-{{ product.selected_or_first_available_variant.featured_media.id }}"
            data-media-position="{{ media_index }}"
            data-alt="{{ product.selected_or_first_available_variant.featured_media.alt }}"
          >
            {%- capture thumbnail_id -%}
              Thumbnail-{{ section.id }}-1
            {%- endcapture -%}
            <button
              class="thumbnail global-media-settings global-media-settings--no-shadow"
              aria-label="{%- if product.selected_or_first_available_variant.featured_media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif product.selected_or_first_available_variant.featured_media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif product.selected_or_first_available_variant.featured_media.media_type == 'video' or product.selected_or_first_available_variant.featured_media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
              aria-controls="GalleryViewer-{{ section.id }}"
              aria-describedby="{{ thumbnail_id }}"
            >
              {{
                product.selected_or_first_available_variant.featured_media.preview_image
                | image_url: width: 416
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '54, 74, 104, 162, 208, 324, 416',
                  id: thumbnail_id,
                  alt: product.selected_or_first_available_variant.featured_media.alt
                | escape
              }}
            </button>
          </li>
        {%- endif -%}
        
        {%- comment -%} Show remaining product media thumbnails, excluding first media and variant featured media {%- endcomment -%}
        {%- for media in product.media -%}
          {%- unless media.id == product.media.first.id or media.id == product.selected_or_first_available_variant.featured_media.id -%}
            {%- liquid
              capture media_index
                if media.media_type == 'model'
                  increment model_index
                elsif media.media_type == 'video' or media.media_type == 'external_video'
                  increment video_index
                elsif media.media_type == 'image'
                  increment image_index
                endif
              endcapture
              assign media_index = media_index | plus: 1
              assign hidden_class = ''
              if has_filtering and media.alt != option_filter and media.alt != 'always_display' and media.alt != blank
                assign hidden_class = ' hidden'
              endif
            -%}
            <li
              id="Slide-Thumbnails-{{ section.id }}-{{ forloop.index | plus: 1 }}"
              class="thumbnail-list__item slider__slide {{ section.settings.thumbnail_layout | default: 'medium' }}{% if section.settings.hide_variants and variant_images and variant_images.size > 0 and variant_images contains media.src %} thumbnail-list_item--variant{% endif %}{{ hidden_class }}"
              data-target="{{ section.id }}-{{ media.id }}"
              data-media-position="{{ media_index }}"
              data-alt="{{ media.alt }}"
            >
              {%- if media.media_type == 'model' -%}
                <span class="thumbnail__badge" aria-hidden="true">
                  <span class="svg-wrapper">
